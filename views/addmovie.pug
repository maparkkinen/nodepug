doctype html
html
  head
    title Add Movie
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    .container
      h1 New Movie
      form(action='/addmovie', method='POST')
        .mb-2
          label(for="title").form-label Title
          input#title.form-control(type="text", name="title" required)
        .mb-2
          label(for="director").form-label Director
          input#director.form-control(type="text", name="director" required)
        .mb-2
          label(for="year").form-label Year
          input#year.form-control(type="number", name="year" required)
        button.btn.btn-primary(type="submit") Add
